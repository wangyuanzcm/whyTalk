{
  "id": "unified-example",
  "name": "统一插件示例",
  "version": "1.0.0",
  "description": "展示统一插件架构的示例插件，支持WASM后台能力和前端展示",
  "author": "Why-Talk Team",
  "type": "unified",
  "permissions": [
    "system.info",
    "storage.read",
    "storage.write",
    "notification.show"
  ],
  "backend": {
    "main": "plugin.wasm",
    "autoRegister": true,
    "functions": [
      {
        "name": "add",
        "description": "执行加法计算",
        "parameters": [
          {
            "name": "a",
            "type": "number",
            "description": "第一个数字"
          },
          {
            "name": "b",
            "type": "number",
            "description": "第二个数字"
          }
        ],
        "returnType": "number"
      },
      {
        "name": "add",
        "description": "执行加法运算",
        "parameters": [
          {
            "name": "a",
            "type": "number",
            "description": "第一个数字"
          },
          {
            "name": "b",
            "type": "number",
            "description": "第二个数字"
          }
        ],
        "returnType": "number"
      },
      {
        "name": "processText",
        "description": "处理文本数据",
        "parameters": [
          {
            "name": "text",
            "type": "string",
            "description": "要处理的文本"
          },
          {
            "name": "operation",
            "type": "string",
            "description": "操作类型：uppercase, lowercase, reverse"
          }
        ],
        "returnType": "string"
      }
    ]
  },
  "frontend": {
    "main": "index.html",
    "lazyLoad": true,
    "routes": [
      {
        "path": "/",
        "component": "index.html",
        "title": "统一插件示例"
      }
    ],
    "ui": {
      "components": [
        {
          "id": "calc-btn",
          "type": "button",
          "label": "数学计算",
          "description": "调用WASM函数进行数学计算",
          "action": "calculate",
          "position": "toolbar"
        },
        {
          "id": "text-btn",
          "type": "button",
          "label": "文本处理",
          "description": "调用WASM函数处理文本",
          "action": "processText",
          "position": "toolbar"
        }
      ]
    },
    "settings": {
      "title": "统一插件设置",
      "sections": [
        {
          "title": "计算设置",
          "fields": [
            {
              "key": "precision",
              "label": "计算精度",
              "type": "number",
              "default": 2,
              "description": "小数点后保留位数"
            }
          ]
        },
        {
          "title": "文本设置",
          "fields": [
            {
              "key": "encoding",
              "label": "文本编码",
              "type": "select",
              "options": [
                { "value": "utf8", "label": "UTF-8" },
                { "value": "ascii", "label": "ASCII" }
              ],
              "default": "utf8"
            }
          ]
        }
      ]
    }
  }
}