{
  "name": "message-plugin",
  "version": "2.0.0",
  "description": "基于LocalSend的消息聊天插件，支持文件传输、截屏、群组聊天等功能",
  "author": "Why-Talk Team",
  "type": "cubeModule",
  "permissions": [
    "storage", 
    "notifications", 
    "ipc", 
    "database", 
    "p2p", 
    "localsend", 
    "file-system", 
    "screen-capture"
  ],
  "frontend": {
    "main": "index.html",
    "routes": [
      {
        "path": "/message",
        "component": "MessageView",
        "name": "消息"
      }
    ]
  },
  "icon": "message",
  "menuTitle": "消息",
  "shortName": "消息",
  "dependencies": {
    "vue": "^3.0.0",
    "naive-ui": "^2.0.0"
  }
}
