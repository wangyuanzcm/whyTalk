{
  "name": "wasm-example",
  "version": "1.0.0",
  "description": "A simple WASM plugin example using native WebAssembly API",
  "author": "Why-Talk Team",
  "type": "cubeModule",
  "permissions": [
    "system.info",
    "storage.read",
    "storage.write"
  ],
  "backend": {
    "main": "plugin.wasm",
    "autoRegister": true
  },
  "frontend": {
    "main": "index.html",
    "routes": [
      {
        "path": "/wasm-example",
        "component": "WasmExample",
        "name": "WASM示例"
      }
    ]
  },
  "menuTitle": "WASM示例",
  "shortName": "WAS",
  "functions": [
    "add",
    "multiply",
    "greet",
    "process_data"
  ],
  "exports": [
    "add",
    "multiply",
    "greet",
    "process_data",
    "memory"
  ],
  "ui": {
    "components": [
      {
        "id": "add-btn",
        "type": "button",
        "label": "数字相加",
        "description": "调用WASM函数进行数字相加",
        "action": "add",
        "position": "toolbar"
      },
      {
        "id": "multiply-btn",
        "type": "button",
        "label": "数字相乘",
        "description": "调用WASM函数进行数字相乘",
        "action": "multiply",
        "position": "toolbar"
      },
      {
        "id": "greet-btn",
        "type": "button",
        "label": "问候",
        "description": "调用WASM函数生成问候语",
        "action": "greet",
        "position": "toolbar"
      },
      {
        "id": "num1-input",
        "type": "number",
        "label": "第一个数字",
        "description": "输入第一个数字",
        "defaultValue": 10,
        "validation": {
          "required": true,
          "min": 0,
          "max": 1000
        },
        "position": "sidebar"
      },
      {
        "id": "num2-input",
        "type": "number",
        "label": "第二个数字",
        "description": "输入第二个数字",
        "defaultValue": 5,
        "validation": {
          "required": true,
          "min": 0,
          "max": 1000
        },
        "position": "sidebar"
      },
      {
        "id": "name-input",
        "type": "text",
        "label": "姓名",
        "description": "输入要问候的姓名",
        "defaultValue": "World",
        "validation": {
          "required": true,
          "max": 50
        },
        "position": "sidebar"
      }
    ],
    "settings": {
      "title": "WASM示例插件设置",
      "description": "配置WASM示例插件的参数",
      "sections": [
        {
          "title": "计算参数",
          "description": "设置计算相关的参数",
          "components": ["num1-input", "num2-input"]
        },
        {
          "title": "问候设置",
          "description": "设置问候相关的参数",
          "components": ["name-input"]
        }
      ]
    }
  }
}