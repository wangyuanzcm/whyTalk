{
  "name": "why-talk",
  "version": "1.0.0",
  "description": "An Electron application with Vue and TypeScript",
  "main": "./out/main/index.js",
  "author": "wangyuanzcm@sina.com",
  "homepage": "https://electron-vite.org",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "lint:fix": "eslint --cache --fix .",
    "format:check": "prettier --check .",
    "lint:format": "pnpm run format && pnpm run lint:fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "pnpm run typecheck:node && pnpm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "pnpm run typecheck && electron-vite build --mode electron",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "pnpm run build && electron-builder --dir",
    "build:win": "pnpm run typecheck && electron-vite build --mode electron && electron-builder --win",
    "build:win:upload": "pnpm run build:win && node scripts/upload-release.js",
    "build:mac": "pnpm run build && electron-builder --mac",
    "build:mac:upload": "pnpm run build:mac && node scripts/upload-release.js",
    "build:linux": "pnpm run build && electron-builder --linux",
    "build:linux:upload": "pnpm run build:linux && node scripts/upload-release.js",
    "upload": "node scripts/upload-release.js",
    "test:upload-config": "node scripts/test-config.js",
    "test:plugins": "electron test-plugins.js",
    "create-users": "electron create-multiple-users.js",
    "plugins:dev": "pnpm --filter=@whytalk/plugins run dev",
    "plugins:build": "pnpm --filter=@whytalk/plugins run build",
    "plugins:install": "pnpm --filter=@whytalk/plugins run install:all",
    "plugins:clean": "pnpm --filter=@whytalk/plugins run clean",
    "test:update": "electron scripts/test-update.js"
  },
